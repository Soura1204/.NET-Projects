@model RegistrationApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="container mt-5">
    <h2 class="text-center">Login</h2>
    <form asp-controller="Login" asp-action="Login" method="post" class="w-50 mx-auto">
        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter your password"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="text-danger">@ViewBag.ErrorMessage</div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>

